extends ../../layout/default.pug

block main
  .container.mt-4
    h1.text-center.text-primary Account
    a(
      href=`${prefixAdmin}/account/create`
      class="btn btn-outline-success float-right"
    ) Thêm mới

    table.table
      thead
        tr
          th(scope="col") STT
          th(scope="col") Họ và Tên
          th(scope="col") Email
          th(scope="col") Số điện thoại
          th(scope="col") Nhóm quyền
          th(scope="col") Thời gian tạo 
          th(scope="col") Hành động

      tbody.table-group-divider
        each record, index in records
          tr
            td= index + 1 
            td= record.fullName 
            td= record.email 
            td= record.phone 
            td= record.role.title
            td= record.createdAt
            td
              a.btn.btn-outline-primary(href=`${prefixAdmin}/account/details/${record._id}`) Chi tiết
              a.btn.btn-outline-primary(href=`${prefixAdmin}/account/edit/${record._id}`) Sửa
              a.btn.btn-outline-danger.ml-2(href=`${prefixAdmin}/account/delete/${record._id}`) Xóa
