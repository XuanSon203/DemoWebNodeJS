extends ../../layout/auth.pug
include ../../mixins/alert.pug

block main
  +alert-error("5000")
  +alert-succses("5000")

  .container.mt-5
    .row.justify-content-center
      .col-md-6
        .card
          .card-header.bg-primary.text-white.text-center
            h3 Đăng Nhập

          .card-body
            form(action="/admin/auth/login" method="POST")
              .form-group
                label(for="email") Email
                input#email.form-control(
                  type="email"
                  name="email"
                  required
                  placeholder="Nhập email"
                )

              .form-group.mt-3
                label(for="password") Mật khẩu
                input#password.form-control(
                  type="password"
                  name="password"
                  required
                  placeholder="Nhập mật khẩu"
                )

              .form-group.text-center.mt-4
                button.btn.btn-primary(type="submit") Đăng Nhập

            if error
              .alert.alert-danger.mt-3
                p= error.message || 'Đã xảy ra lỗi. Vui lòng thử lại.'
