mixin search(keyword)
 form#searchForm(action="" method="GET" class="flex justify-between items-center mt-4")
            .relative.flex-1
                input.form-input(
                    type="text"
                    name="search"
                    value=`${keyword}`
                    placeholder="Tìm kiếm sản phẩm..."
                    aria-label="Search"
                    class="w-full py-2 px-4 rounded-full shadow-md focus:ring-2 focus:ring-primary-500 transition-all duration-300 ease-in-out"
                )
            button.btn.btn-primary(
                type="submit"
                class="ml-2 py-2 px-4 rounded-full text-white hover:bg-primary-600 focus:ring-2 focus:ring-primary-500"
            ) Tìm kiếm