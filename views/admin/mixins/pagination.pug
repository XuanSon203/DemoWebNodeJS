mixin pagination(pagination)
 nav
        ul.pagination
            if(pagination.currentPage >= 1)
            li.page-item(class=pagination.centeredPage === 1 ? 'disabled' : '')
                button.page-link(btn-pagination = pagination.currentPage - 1) Trang trước

            //- Hiển thị các trang
            - for (let i = 1; i <= pagination.toltalPage; i++)
                li.page-item(class=pagination.currentPage == i ? 'active' : '')
                    buuton.page-link( btn-pagination =  i) #{i}

            //- Kiểm tra trang kế tiếp
            if(pagination.currentPage < pagination.toltalPage)
            li.page-item(class=pagination.currentPage === pagination.toltalPage ? 'disabled' : '')
                button.page-link(btn-pagination = pagination.currentPage + 1) Kế tiếp